{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "../dist/server",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    ".",
    "../models",
    "../utils",
    "../routes",
    "../middlewares",
    "../auth"
  ],
  "ts-node": {
    "transpileOnly": true
  }
} 